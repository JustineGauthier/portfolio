<h1>What's new with <%= @project.title.capitalize %> ?</h1>

<%= simple_form_for(@project) do |f| %>
  <%= f.input :title %>
  <%= f.input :url %>
  <%= f.input :description %>
  <%= f.input :creation_date, as: :date, html5: true %>

  <%= f.input :categorie, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male']], label_method: :second, value_method: :first %>
  <%= f.submit %>
<% end %>
