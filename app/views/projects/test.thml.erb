<div class="container">
  <div class="">
    <div class="scroll">
      <% @projects.each do |project| %>
        <div class="card-category  mx-2"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path project.photo.key, height: 300, crop: :fill %>')">
          <div>
            <%= project.title %>
            <%= project.categorie.name %>
            <% if policy(project).edit? %>
              <%= link_to "Modifier", edit_project_path(project) %>
            <% end %>
            <% if policy(project).destroy? %>
              <%= link_to "Supprimer", project_path(project), method: :delete %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
    <% if policy(Project).create? %>
        <%= link_to "Ajouter un projet", new_project_path %>
      <% end %>

</div>
